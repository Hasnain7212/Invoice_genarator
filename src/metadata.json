        }
      },
      "invoices": {
        "title": "Invoice Management",
        "endpoint": "/api/invoices",
        "table": {
          "endpoint": "http://127.0.0.1:5000/api/invoices",
          "columns": [
            {"key": "invoice_number", "title": "Invoice #", "sorter": true},
            {"key": "customer_name", "title": "Customer", "search": true},
            {"key": "total_amount", "title": "Amount", "type": "currency"},
            {"key": "status", "title": "Status", "filter": true},
            {"key": "date", "title": "Date", "type": "date", "sorter": true}
          ]
        },
        "form": {
          "fields": [
            {"key": "customer_name", "label": "Customer", "type": "text", "required": true},
            {"key": "items", "label": "Items", "type": "itemSelect", "source": "inventory"},
            {"key": "template_id", "label": "Template", "type": "select", "options": "templates"},
            {"key": "due_date", "label": "Due Date", "type": "date"},
            {"key": "notes", "label": "Notes", "type": "textarea"}
          ]
        }
      }
