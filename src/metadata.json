    "modules": {
      "inventory": {
        "title": "Inventory Management",
        "endpoint": "http://127.0.0.1:5000/api/inventory",
        "table": {
          "endpoint": "http://127.0.0.1:5000/api/inventory",
          "columns": [
            {"key": "name", "title": "Name", "sorter": true, "search": true},
            {"key": "quantity", "title": "Quantity", "type": "number"},
            {"key": "price", "title": "Price", "type": "currency"},
            {"key": "category", "title": "Category", "filter": true},
            {"key": "supplier", "title": "Supplier", "filter": true},
            {"key": "reorder_point", "title": "Reorder Point", "type": "number"}
          ]
        },
        "form": {
          "fields": [
            {"key": "name", "label": "Name", "type": "text", "required": true},
            {"key": "quantity", "label": "Quantity", "type": "number", "required": true},
            {"key": "price", "label": "Price", "type": "number", "required": true},
            {"key": "category", "label": "Category", "type": "select", "options": "categories"},
            {"key": "supplier", "label": "Supplier", "type": "select", "options": "suppliers"},
            {"key": "reorder_point", "label": "Reorder Point", "type": "number"}
